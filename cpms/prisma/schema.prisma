generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")  // .env must define this
}

model User {
  id        Int        @id @default(autoincrement())
  name      String
  email     String     @unique
  auditLogs AuditLog[]
  projects  Project[]  @relation("ManagerProjects")
}

model AuditLog {
  id         Int      @id @default(autoincrement())
  userId     Int?
  action     String
  tableName  String
  recordId   Int
  beforeData Json?    // better than String? for JSON
  afterData  Json?
  timestamp  DateTime @default(now())

  user User? @relation(fields: [userId], references: [id])

  @@map("audit_log")
}

model Project {
  id                String   @id @default(uuid())
  title             String
  description       String
  forecast          Decimal   // <- money friendly
  actuals           Decimal
  budget            Decimal
  plannedStartDate  DateTime
  plannedEndDate    DateTime
  dateCreated       DateTime @default(now())

  // optional manager link
  projectManagerId  Int?
  projectManager    User?     @relation("ManagerProjects", fields: [projectManagerId], references: [id])
}
